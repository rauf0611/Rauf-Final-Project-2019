@model IEnumerable<AsianRest.Models.Location>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Location</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LocCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocAddres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocWorkHours)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LocCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocAddres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocWorkHours)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
