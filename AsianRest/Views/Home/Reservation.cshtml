
@{
    ViewBag.Title = "Reservation";
}

<!-- Reservation starts -->

<section class="reservation">
    <div class="container">
        <div class="row" style="margin-top:100px">
            <div class="col-12 text-center">
                <h5 style="font-family: 'Dancing Script', cursive; font-size:1.5em ; color: #8b755a;">Magical Experience</h5>
            </div>
            <div class="col-12 text-center">
                <h1 style="font-weight: 700;    position: relative; color: #232323; font-size: 42px; font-weight: 700; line-height: 1.2em; padding-bottom: 35px; letter-spacing: 1px; text-transform: uppercase;">RESERVATION</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group row">
                    <label for="example-date-input" class="col-2 col-form-label">
                        <i style="font-size:25px;" class="far fa-calendar"></i>
                    </label>
                    <div class="col-8">
                        <input class="form-control" type="date" value="2019-05-15" id="example-date-input">
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group row">
                    <label for="example-time-input" class="col-2 col-form-label">
                        <i style="font-size:25px;" class="far fa-clock"></i>
                    </label>
                    <div class="col-8">
                        <input class="form-control" type="time" value="19:00:00" id="example-time-input">
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group row">
                    <label for="example-number-input" class="col-2 col-form-label">
                        <i style="font-size:25px;" class="fas fa-user"></i>
                    </label>
                    <div class="col-8">
                        <input class="form-control" type="number" value="0" max="6" min="0" id="example-number-input">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <button style="     background: #8b755a;color:white;font-weight:bold;font-size:2em;margin-top:20px !important;    border: 2px solid #8b755a;line-height: 24px;    text-align: center;   border-radius: 0px; font-size: 12px; letter-spacing: 2px; padding: 13px 43px; margin-top: 10px;cursor: pointer;text-transform:uppercase;">
                    find a table
                </button>
            </div>
        </div>





</section>

<!-- Reservation ends -->
<!-- Telephone RESERVATION starts -->

<section class="telephone-reservation" style="margin-top:100px;background:#f5f5f5;padding-top:90px;">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h3>
                    Telephone Reservation
                </h3>
            </div>
            <div class="col-12">
                <h5>
                    Please Call 765-879-1077
                </h5>
            </div>
        </div>
        <div class="row mt-5 mb-5">
            <div class="col-12">
                <img src="http://monde.elitelayers.com/html/images/resource/reserve.jpg" alt="">
            </div>
        </div>
    </div>
</section>



<!-- Telephone RESERVATION ends -->
